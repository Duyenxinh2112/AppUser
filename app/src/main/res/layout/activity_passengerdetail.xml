<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E1DD"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.PassengerDetail">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#4296D8"
        android:padding="12dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/ttcanhan"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Chi tiết khách hàng"
        android:layout_marginStart="50dp"
        android:background="#4296D8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ttcanhan">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Thông tin cơ bản"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Họ và tên"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">
                        <EditText
                            android:id="@+id/txtHoVaTen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/prellimtextbg"
                            android:drawablePadding="@dimen/padding_large"
                            android:textSize="15dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Email"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">
                        <EditText
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/prellimtextbg"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawablePadding="@dimen/padding_large"
                            android:textSize="15dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Địa chỉ"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">
                        <EditText
                            android:id="@+id/txtDiaChi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/prellimtextbg"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawablePadding="@dimen/padding_large"
                            android:textSize="15dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Số điện thoại"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">

                        <EditText
                            android:id="@+id/txtSoDienThoai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/prellimtextbg"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawablePadding="@dimen/padding_large"
                            android:textSize="15dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin vé đã đặt"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_gravity="left"
                android:textColor="@color/black"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text=" Tổng chuyến bay"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">
                        <EditText
                            android:id="@+id/txtChuyenBay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/prellimtextbg"
                            android:drawablePadding="@dimen/padding_large"
                            android:textSize="15dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text=" Tổng Số Lượng"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">
                        <EditText
                            android:id="@+id/txtSoLuong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/prellimtextbg"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawablePadding="@dimen/padding_large"
                            android:textSize="15dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout >