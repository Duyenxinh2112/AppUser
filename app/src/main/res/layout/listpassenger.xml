<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/hoten"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Họ Tên:"
                        android:textAllCaps="true"
                        android:textColor="@color/xambddam"/>
                    <TextView
                        android:id="@+id/txtHoTen"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/ngaysinh"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="ngày sinh: "
                        android:textAllCaps="true"
                        android:textColor="@color/xambddam" />
                    <TextView
                        android:id="@+id/txtNgaySinh"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/GioiTinh"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="Giới tính:"
                        android:textAllCaps="true"
                        android:textColor="@color/xambddam"/>
                    <TextView
                        android:id="@+id/txtGioiTinh"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/diachi"
                        android:layout_width="120dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:text="Địa chỉ: "
                        android:textAllCaps="true"
                        android:textColor="@color/xambddam"/>
                    <TextView
                        android:id="@+id/txtDiaChi"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/sdt"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="SĐT: "
                        android:textColor="@color/xambddam"/>
                    <TextView
                        android:id="@+id/txtsdt"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>